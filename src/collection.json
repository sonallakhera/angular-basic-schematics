{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "base-module": {
      "description": "Creates a basic angular module with routes, services & module file.",
      "factory": "./base-module/index#baseModule",
      "schema": "./base-module/schema.json"
    },
    "add-form": {
      "description": "Creates add form component.",
      "factory": "./add-form/index#baseModule",
      "schema": "./add-form/schema.json"
    },
    "list-component": {
      "description": "Creates a list component along with table & filters.",
      "factory": "./list-component/index#baseModule",
      "schema": "./list-component/schema.json"
    },
    "details-component": {
      "description": "Creates an item details component.",
      "factory": "./details-component/index#baseModule",
      "schema": "./details-component/schema.json"
    }
  }
}
